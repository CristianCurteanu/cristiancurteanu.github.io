---
---

[
    {% for tag in site.tags %}
      {
        "name": "{{ tag[0] | slugify }}",
        "posts": [
          {% for post in tag[1] %}
            {
              "title": "{{ post.title }}",
              "description": "{{ post.description | join: " " }}",
              "cover": "{{ post.image }}",
            {% if post.external_url %}
              "url": "{{ post.external_url }}",
              "target": "_blank",
            {% else %}
              "url": "{{site.url}}{{ post.permalink }}",
              "target": "_self",
            {% endif %}
              "date": "{{ post.date | date: "%-d %B %Y" }}"
            }
            {% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
